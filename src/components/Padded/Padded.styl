@require 'settings/breakpoints'

.Padded
    padding 1.5rem 2rem

    +small-screen()
        padding 1rem

.Unpadded--vertical
    margin-top -1.5rem
    margin-bottom -1.5rem

    +small-screen()
        margin-top -1rem
        margin-bottom -1rem

.Unpadded--horizontal
    margin-left -2rem
    margin-right -2rem

    +small-screen()
        margin-left -1rem
        margin-right -1rem
