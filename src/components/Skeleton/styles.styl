.skeleton
  position relative
  background-color #E2E2E2
  height 0.75rem
  border-radius 4px
  overflow hidden

.skeleton--small
    width 50px

.skeleton--medium
    width 200px

.skeleton::after
    display block
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transform translateX(-100%)
    background linear-gradient(90deg, transparent, rgba(255, 255, 255, .2), transparent)
    animation loading 1s infinite



@keyframes loading {
  100% {
    transform translateX(100%)
  }
}
