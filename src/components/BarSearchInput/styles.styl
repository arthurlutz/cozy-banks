@require 'settings/breakpoints'

.InputWrapper
  display flex
  align-items center
  margin-left 2rem
  color var(--silver)
  border-radius 2px
  transition border 0.3s ease, width 0.3s ease
  border 1px solid var(--silver)
  flex-basis 800px

  input
    padding 0.375rem
    background transparent
    border none
    outline none
    flex-grow 1

  .Icon
    flex-shrink 0

.ResetIcon
  cursor pointer

+small-screen()
  .InputWrapper
    margin-left 0
    margin-right 0.5rem
    padding 0
    width calc(100vw - 2rem)

    input
        color var(--primaryContrastTextColor)

    input::placeholder
        color var(--primaryContrastTextColor)
        opacity 0.5

    .SearchIcon
      display none

    .ResetIcon
        color white

  .InputWrapper
    border 1px solid transparent

.Icon
    display block
    width 2.5rem
    height 2rem
    display flex
    align-items center
    justify-content center
