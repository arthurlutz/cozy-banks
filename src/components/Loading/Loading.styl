@require 'settings/breakpoints'

.bnk-loading
    text-align center
    margin 5rem auto

    h2
        font-size rem(1.5)
        margin         2.0625rem auto 0
        line-height    1.3
        color          var(--primaryTextColor)
        letter-spacing -.2px
    p
        margin-top  0.9375rem
        color       var(--coolGrey)
        line-height 1.5


+medium-screen()
    .bnk-loading
        &:before
            width  3.4375rem
            height 3.4375rem
        h2
            margin 2.0625rem 1.5em 0
        p
            margin 0.3125rem 1.5em 0
